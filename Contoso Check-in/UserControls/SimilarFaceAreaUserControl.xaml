<UserControl x:Class="ContosoCheckIn.UserControls.SimilarFaceAreaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContosoCheckIn.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <Border x:Name="SmartBorder" Background="Black" Opacity="0.35"></Border>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="40*" />
            </Grid.RowDefinitions>

            <TextBlock Text="No detection: similar face areas" Grid.Row="1" TextWrapping="Wrap" FontSize="36" VerticalAlignment="Center" TextAlignment="Center" Width="300" />
            <Image x:Name="image" Grid.Row="0" Source="/ContosoCheckIn;component/Resources/similarfaces.png" VerticalAlignment="Bottom" />
        </Grid>
    </Grid>
</UserControl>
